<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.birdsofguatemala">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="Birds of Guatemala"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BirdsOfGuatemala">

        <!-- HomeActivity is the launcher (first screen) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Bird list screen (opened when user presses GO) -->
        <activity
            android:name=".BirdListActivity"
            android:exported="false" />

        <!-- If you still have other activities, declare them here -->
        <activity android:name=".MainActivity" android:exported="false" />
    </application>
</manifest>
